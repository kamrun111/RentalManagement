@model List<Floor>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Create Floor</h2>
			</div>

		</div>
	</div>
	<div class=" card-body p-4">
		<div class="row pb-3">
			<div class="col-6">

			</div>
			<div class=" col-6 text-end">
				<a asp-controller="Floor" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i>  Create New Floor
				</a>
			</div>
		</div>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>FloorID</th>
					<th>FloorName</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var Floor in Model.OrderBy(o => o.FloorId))
				{
					<tr>
						<td>@Floor.FloorId</td>
						<td>@Floor.FloorName</td>
						<td class="w-75 btn-group" role="group">
							<a asp-controller="Floor" asp-action="Edit" asp-route-id="@Floor.FloorId" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-controller="Floor" asp-action="Delete" asp-route-id="@Floor.FloorId" class="btn btn-danger mx-2">
								<i class="bi bi-trash-fill"></i> Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

@section Scripts {
<script src="~/js/flat.js"></script>
}
