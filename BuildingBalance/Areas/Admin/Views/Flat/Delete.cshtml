@model Flat

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Flat</h2>
			</div>

		</div>
	</div>
	<div class=" card accordion-body p-4">
		<form method="post">
			<input asp-for="FlatId" hidden />
			<div class=" border p-3 mt-4">
				<div class="form-floating py-2 col-12 ">
					<input asp-for="FlatName"  disabled class="form-control border-0 shadow" />
					<label asp-for="FlatName" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12 ">
					<input asp-for="FlatSize" disabled class="form-control border-0 shadow" />
					<label asp-for="FlatSize" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12 ">
					<input asp-for="FlatRent" disabled class="form-control border-0 shadow" />
					<label asp-for="FlatRent" class="ms-2"></label>
				</div>

				<div class="row pt-2 mt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control"> Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Flat" asp-action="Index" class=" btn btn-outline-secondary form-control">
							Back to List
						</a>
					</div>

				</div>



			</div>

		</form>
	</div>
</div>




